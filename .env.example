# Thông tin email để gửi thông báo
EMAIL_USER=AsahiJapanTours
EMAIL_PASSWORD=your_email_app_password_here

# Session Secret (nên tạo một giá trị ngẫu nhiên cho môi trường production)
SESSION_SECRET=AsahiJapanToursSecretKey_2024

# Custom Domain (nếu có)
APP_DOMAIN=asahivietlife.tokyo

# Google Sheets URLs
# Main Sheet cho admin AsahiJapanTours
